<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/list_schedule_background"
    android:background="@color/backgroundLightRed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorGrayedFields">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/line_schedule_day"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/line_schedule_hour"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line_schedule_profname"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

</RelativeLayout>
